<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_icon"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableStart="@drawable/bottomnub"
            android:drawableLeft="@drawable/bottomnub"
            android:gravity="center|top"
            android:text="@string/for_me"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <AutoCompleteTextView
        android:id="@+id/edtPickUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        android:drawableStart="@drawable/scrubber"
        android:drawableLeft="@drawable/scrubber"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:hint="@string/enter_pickup_location"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="normal"
        tools:ignore="Autofill,TextFields" />

    <AutoCompleteTextView
        android:id="@+id/edtWhereTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        android:drawableStart="@drawable/scrubber"
        android:drawableLeft="@drawable/scrubber"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:hint="@string/where_to"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="normal"
        tools:ignore="Autofill,TextFields" />

</LinearLayout>